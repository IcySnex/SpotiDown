<UserControl
    x:Class="SpotiDown.Controls.TrackInfo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Helpers="using:SpotiDown.Helpers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="400"
    mc:Ignorable="d">

    <StackPanel Spacing="10">
        <ContentControl Tag="Title" Template="{ThemeResource WithHeader}">
            <TextBox Text="{x:Bind Song.Title, Mode=TwoWay}" />
        </ContentControl>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <ContentControl Tag="Artist" Template="{ThemeResource WithHeader}">
                <TextBox Text="{x:Bind Song.Artist, Mode=TwoWay}" />
            </ContentControl>
            <ContentControl
                Grid.Column="2"
                Tag="Album"
                Template="{ThemeResource WithHeader}">
                <TextBox Text="{x:Bind Song.Album, Mode=TwoWay}" />
            </ContentControl>
        </Grid>
    </StackPanel>
</UserControl>
